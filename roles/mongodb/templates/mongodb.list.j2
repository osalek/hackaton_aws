{% if mongodb.version >= "3.2" %}
deb http://repo.mongodb.org/apt/debian wheezy/mongodb-org/3.2 main
{% elif mongodb.version >= "3.0" and mongodb.version < "3.2" %}
deb http://repo.mongodb.org/apt/debian wheezy/mongodb-org/3.0 main
{% elif mongodb.version < "3.0" %}
deb http://repo.mongodb.org/apt/debian wheezy/mongodb-org/{{ mongodb.version }} main
{% endif %}
